<div class="modal-dialog" role="document">
  <form action="/edit" method="post" form="editForm">
    <div class="modal-content">
      <div class="modal-body">
        <div class="form-group">
          <div class="form-row">
            <div class="col">
              <input type="text" class="form-control" placeholder="First name" name="firstName">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Last name" name="lastName">
            </div>
          </div>
        </div>
        <div class="form-group">
          <input class="form-control" id="imgUrl" placeholder="imageurl" name="url">
        </div>
        <div class="form-group">
          <input class="form-control" id="country" placeholder="Country" name="country">
        </div>
        <div class="form-group">
          <textarea class="form-control" placeholder="a few lines about yourself..." id="exampleFormControlTextarea1" ,
            name='about' rows="3"></textarea>
        </div>
        <div class="form-group">
          <input onfocus="(this.type='date')" class="form-control" placeholder="Birthday" name="birthday"> </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button value="Send" class="btn btn-primary" type="submit" id="submit">Save changes</button>
      </div>
    </div>
  </form>
</div>

