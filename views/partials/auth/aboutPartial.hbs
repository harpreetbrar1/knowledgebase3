<div class="container">
  <form action="/register" method="post">
    <div class="form-group">
      <input class="form-control" id="imgUrl" placeholder="imageurl" name="url" required>
    </div>
    <div class="form-group">
      <input class="form-control" id="country" placeholder="Country" name="country" required>
    </div>
    <div class="form-group">
      <textarea class="form-control" placeholder="a few lines about yourself..." id="exampleFormControlTextarea1" ,
        name='about' rows="3"></textarea>
    </div>
    <div class="form-group">
      <input onfocus="(this.type='date')" class="form-control" placeholder="Birthday" name="birthday"> </div>
    <button type="submit" class="btn btn-primary">Complete Registration</button>
  </form>
  <hr>
</div>